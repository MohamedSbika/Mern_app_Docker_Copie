pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                // Cloner le dépôt GitHub
                git url: 'https://github.com/yourusername/yourrepository.git', branch: 'main'
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    // Construire les images Docker avec Docker Compose
                    sh 'docker-compose -f docker-compose.yml build'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Lancer les tests pour le backend
                    sh 'docker-compose -f docker-compose.yml run server npm test'
                    
                    // Lancer les tests pour le frontend
                    sh 'docker-compose -f docker-compose.yml run client npm test'
                }
            }
        }

        stage('Start Services') {
            steps {
                script {
                    // Démarrer les services avec Docker Compose
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }

        stage('Post-Deployment Cleanup') {
            steps {
                script {
                    // Optionnel: Nettoyer après le déploiement
                    sh 'docker-compose -f docker-compose.yml down'
                }
            }
        }
    }

    post {
        success {
            echo 'Build, tests et déploiement réussis !'
        }
        failure {
            echo 'Le pipeline a échoué.'
        }
    }
}
