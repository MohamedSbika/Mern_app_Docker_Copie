pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/MohamedSbika/Mern_app_Docker_Copie.git'
            }
        }
        stage('Build Docker Images') {
            steps {
                script {
                    sh 'docker build -t mongodb ./mongodb'
                    sh 'docker build -t server ./server'
                    sh 'docker build -t client ./client'
                }
            }
        }
        stage('Start Containers') {
            steps {
                script {
                    sh 'docker run -d --name mongodbtest1 mongodb'
                    sh 'docker run -d --name server1 --link mongodbtest1 server'
                    sh 'docker run -d --name client1 --link server1 client'
                }
            }
        }
        stage('Run Tests') {
            steps {
                // Add your testing commands here
            }
        }
        stage('Stop Containers') {
            steps {
                sh 'docker stop client1 server1 mongodbtest1'
                sh 'docker rm client1 server1 mongodbtest1'
            }
        }
    }
}
