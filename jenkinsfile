pipeline {
    agent any

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }

        stage("Install Dependencies API") {
            steps {
                dir('server1') {
                    sh 'npm install'
                }
            }
        }

        stage("Install Dependencies Client") {
            steps {
                dir('client1') {
                    sh 'npm install'
                }
            }
        }

        stage("Build Docker Images and Run Containers") {
            steps {
                script {
                    // Construire les images et démarrer les conteneurs
                    sh 'docker compose up --build -d'
                }
            }
        }
    }

    post {
        always {
            // Arrêter les conteneurs après la construction
            sh 'docker compose down'
        }
    }
}
