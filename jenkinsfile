pipeline {
    agent any
    environment {
        DOCKER_COMPOSE_PATH = '/usr/local/bin/docker-compose'  // Set path to docker-compose if needed
        IMAGE_NAME = 'mern_app_docker'
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/MohamedSbika/Mern_app_Docker_Copie.git'
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    // Building the docker images using docker-compose
                    sh 'docker-compose -f docker-compose.yml build'
                }
            }
        }

        stage('Start Containers') {
            steps {
                script {
                    // Starting the containers using docker-compose
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }

        stage('Run Tests') {
            steps {
                // Add testing commands if needed (e.g., run unit tests, integration tests, etc.)
                echo 'Running tests...'
            }
        }

        stage('Stop Containers') {
            steps {
                script {
                    // Stopping the containers after the job is done
                    sh 'docker-compose -f docker-compose.yml down'
                }
            }
        }
    }

    post {
        always {
            // Cleanup actions (e.g., remove any temporary files, stop running containers, etc.)
            echo 'Cleaning up...'
        }
    }
}
